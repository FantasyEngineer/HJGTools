<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/half_tranlucent_black"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/llParent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="70dp"
            android:orientation="vertical">


            <com.hjg.hjgtools.view.roundview.RoundTextView
                android:id="@+id/tvTouchBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:gravity="center"
                android:padding="20dp"
                android:text="触摸拖动的的bar"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintTop_toTopOf="parent"
                app:rv_backgroundColor="@color/gray_press"
                app:rv_backgroundPressColor="@color/dimgray"
                app:rv_cornerRadius_TL="8dp"
                app:rv_cornerRadius_TR="8dp">

            </com.hjg.hjgtools.view.roundview.RoundTextView>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_press">

            </View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvTouchBar"></LinearLayout>

        </LinearLayout>


    </LinearLayout>
</layout>