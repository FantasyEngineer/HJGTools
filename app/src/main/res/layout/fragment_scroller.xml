<?xml version="1.0" encoding="utf-8"?>
<com.hjg.hjgtools.activity.animation.translate.trans.view.ScrollerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollerFrameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="点一下按钮，\n你会变现scroller的作用"
            android:textColor="@color/black">

        </TextView>

        <Button
            android:id="@+id/btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点一下我" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="但是父布局调用scroll to" />

    </LinearLayout>


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        tools:srcCompat="@tools:sample/avatars" />
</com.hjg.hjgtools.activity.animation.translate.trans.view.ScrollerFrameLayout>