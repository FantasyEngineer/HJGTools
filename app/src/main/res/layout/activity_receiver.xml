<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        tools:context=".activity.receiver.ReceiverActivity">


        <Button
            android:id="@+id/btnSendStaticBroadcast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="sendBroadcast"
            android:text="发送静态广播"
            app:layout_constraintTop_toTopOf="parent"></Button>

        <TextView
            android:id="@+id/tvAttention"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/btnSendStaticBroadcast">

        </TextView>


        <TextView
            android:id="@+id/tvDynamicTitle"
            style="@style/TvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="动态广播"
            app:layout_constraintLeft_toLeftOf="@id/tvAttention"
            app:layout_constraintRight_toRightOf="@+id/tvAttention"
            app:layout_constraintTop_toBottomOf="@id/tvAttention">

        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/tvDynamicTitle">

            <Button
                android:id="@+id/btnRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:onClick="operationDynamicBroadcast"
                android:text="注册广播"></Button>

            <Button
                android:id="@+id/btnSendDynamic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:onClick="operationDynamicBroadcast"
                android:text="发送广播"></Button>


            <Button
                android:id="@+id/btnUnregister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="operationDynamicBroadcast"
                android:text="反注册广播"></Button>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>