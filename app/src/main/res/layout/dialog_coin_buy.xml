<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingTop="5dp"
    android:paddingRight="20dp"
    android:paddingBottom="5dp">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="键入购买币信息"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/coinName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:text="币名称:"
                android:textSize="15sp" />

            <com.hjg.base.view.roundview.RoundEditText
                android:id="@+id/etCoinName"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890"
                android:gravity="center_vertical"
                android:inputType="textCapWords"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textSize="15sp"
                app:rv_backgroundColor="@color/lightslategrey"
                app:rv_backgroundEnableColor="@color/white"
                app:rv_cornerRadius="5dp"
                app:rv_strokeColor="@color/gray"
                app:rv_strokeWidth="0.5dp">

            </com.hjg.base.view.roundview.RoundEditText>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"

            android:layout_marginBottom="7dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/coinNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:inputType="number"
                android:text="币数量:"
                android:textSize="15sp" />

            <com.hjg.base.view.roundview.RoundEditText
                android:id="@+id/etCoinNum"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:digits="1234567890."
                android:gravity="center_vertical"
                android:inputType="number"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textSize="15sp"
                app:rv_backgroundColor="@color/lightslategrey"
                app:rv_backgroundEnableColor="@color/white"
                app:rv_cornerRadius="5dp"
                app:rv_strokeColor="@color/gray"
                app:rv_strokeWidth="0.5dp"></com.hjg.base.view.roundview.RoundEditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"

            android:gravity="center_vertical">

            <TextView
                android:id="@+id/coinPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:text="币单价:"
                android:textSize="15sp" />

            <com.hjg.base.view.roundview.RoundEditText
                android:id="@+id/etCoinPrice"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:digits="1234567890."
                android:gravity="center_vertical"
                android:inputType="number"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textSize="15sp"
                app:rv_cornerRadius="5dp"
                app:rv_strokeColor="@color/gray"
                app:rv_strokeWidth="0.5dp"></com.hjg.base.view.roundview.RoundEditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center">


            <Button
                android:id="@+id/btnCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:text="取消">

            </Button>

            <Button
                android:id="@+id/btnConfirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="确认">

            </Button>
        </LinearLayout>


    </LinearLayout>


</LinearLayout>