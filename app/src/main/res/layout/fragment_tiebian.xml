<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.hjg.hjgtools.activity.animation.translate.trans.view.TiebianViewAuto
            android:id="@+id/tbLeftView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:padding="5dp"
            android:text="我是左边贴边"
            android:textColor="@color/white">

        </com.hjg.hjgtools.activity.animation.translate.trans.view.TiebianViewAuto>


        <com.hjg.hjgtools.activity.animation.translate.trans.view.TiebianViewAuto
            android:id="@+id/tbRightView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="50dp"
            android:background="@color/black"
            android:padding="5dp"
            android:text="我是右边贴边"
            android:textColor="@color/white">

        </com.hjg.hjgtools.activity.animation.translate.trans.view.TiebianViewAuto>

        <com.hjg.hjgtools.activity.animation.translate.trans.view.TiebianViewAuto
            android:id="@+id/tbAutoView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="100dp"
            android:background="@color/black"
            android:padding="5dp"
            android:text="自动贴左右边"
            android:textColor="@color/white">

        </com.hjg.hjgtools.activity.animation.translate.trans.view.TiebianViewAuto>


        <com.hjg.hjgtools.activity.animation.translate.trans.view.LayoutView
            android:id="@+id/transView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/red"
            android:padding="10dp"
            android:text="我是可以随意移动的" />


    </FrameLayout>
</layout>