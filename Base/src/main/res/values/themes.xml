<resources xmlns:tools="http://schemas.android.com/tools">

    <!--    &lt;!&ndash;设置全activity背景&ndash;&gt; 跳转不白屏-->
    <!--    <item name="android:windowIsTranslucent">true</item>-->
    <!--    <item name="android:windowBackground">@mipmap/activity_backgroud</item>-->

    <!--全屏幕，无titlebar-->
    <style name="HjgFullScreenNoTitle" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>//是否有遮盖
    </style>

    <!--无titlebar-->
    <style name="HjgNoTitle" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>//是否有遮盖
    </style>


    <!--BottomSheetDialog设置背景为透明的做法-->
    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
    </style>

    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>


</resources>